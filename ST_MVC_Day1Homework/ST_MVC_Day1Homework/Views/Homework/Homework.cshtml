@model ST_MVC_Day1Homework.Models.HomeworkViewModel
@{
    ViewBag.Title = "Homework";
    Layout = "~/Views/Shared/_LayoutHomework.cshtml";
}
@*<div>
        @Html.TextBoxFor(model => model.Type)
    </div>*@
<form class="form-horizontal" method="post" action="@Url.Content("~/HomeWork/HomeWork")">
    <div class="well">

        <div class="form-group">
            <label for="category" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                @*<select id="category" class="form-control">
                        <option value="" selected>請選擇</option>
                        <option>支出</option>
                        <option>收入</option>
                    </select>*@
                @Html.DropDownListFor(model => model.Type, Model.TypeList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="money" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="money" placeholder="金額">*@
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "金額" } })
                @Html.ValidationMessageFor(model=>model.Price,"",new { @class="text-danger"})
            </div>
        </div>
        <div class="form-group">
            <label for="date" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="date" placeholder="日期">*@
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @placeholder = "日期" } })
                @Html.ValidationMessageFor(model=>model.Date,"",new {@class="text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="description"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>#</th>
                    <th>類別</th>
                    <th>日期</th>
                    <th>金額</th>
                </tr>
                @if (Model.GridData != null)
            {
                for (int i = 0; i < Model.GridData.Count; i++)
                {
                        <tr>
                            <td>@Model.GridData[i].SerNum @Html.HiddenFor(model => model.GridData[i].SerNum)</td>
                            <td>@Model.GridData[i].Type @Html.HiddenFor(model => model.GridData[i].Type)</td>
                            <td>@Model.GridData[i].Date @Html.HiddenFor(model => model.GridData[i].Date)</td>
                            <td>@Model.GridData[i].Price @Html.HiddenFor(model => model.GridData[i].Price)</td>
                        </tr>
                    }
                }

                @*<tr>
                        <td>1</td>
                        <td>支出</td>
                        <td>2016-01-01</td>
                        <td>300</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>支出</td>
                        <td>2016-01-02</td>
                        <td>1,600</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>支出</td>
                        <td>2016-01-03</td>
                        <td>8,00</td>
                    </tr>*@
            </table>
        </div>
    </div>
    <hr />
</form>